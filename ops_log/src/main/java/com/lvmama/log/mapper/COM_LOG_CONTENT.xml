<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.lvmama.log.dao.ComLogContentDao">

    <insert id="insert" parameterType="com.lvmama.log.pojo.ComLogContent">
        insert into ${tableName}
        (LOG_ID, CONTENT, CREATE_TIME)
        values
        (#{logId,jdbcType=VARCHAR}, #{content}, #{createTime,jdbcType=TIMESTAMP})
    </insert>

    <update id="createTable" parameterType="java.util.Map">
        CREATE TABLE IF NOT EXISTS ${tableName} (
          LOG_ID INT(11) NOT NULL,
          CONTENT LONGTEXT DEFAULT NULL,
          CREATE_TIME DATETIME DEFAULT CURRENT_TIMESTAMP,
          PRIMARY KEY (LOG_ID)
        )
        ENGINE = INNODB
        AVG_ROW_LENGTH = 47349
        CHARACTER SET utf8
        COLLATE utf8_general_ci;
    </update>

</mapper>